@model IEnumerable<PB.BL.Domain.Accounts.Profile>

@{
  ViewBag.Title = "Beheer Users";
  Layout = "~/Views/Shared/_Layout.cshtml";
}



<main class="main-content bgc-grey-100">
  <div id="mainContent">
    <div class="container-fluid">
      <div style="margin: 10px 0;padding:0;" class="masonry-item col-md-12">
        <div class="bgc-white p-20 bd">
          <h1 class="h3" style="text-align: center">Beheer Users en Admins</h1>
        </div>
      </div>
      <div class="row">

        <div style="margin: 10px 0;padding:0;" class="masonry-item col-md-12">
          <div class="bgc-white p-20 bd">
            <h4 class="c-grey-900 mB-20">Users</h4>
            <table id="tab" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
              <thead>
                <tr>
                  <th>@Html.DisplayNameFor(model => model.Id)</th>
                  <th>@Html.DisplayNameFor(model => model.UserName)</th>
                  <th>@Html.DisplayNameFor(model => model.Email)</th>
                    @*<th>@Html.DisplayNameFor(model => model.Roles)</th>*@
                  <th>CRUD</th>
                </tr>
              </thead>

              <tbody>
                @foreach (var item in Model)
                {
                  <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    @*<td>@Html.DisplayFor(modelItem => item.Roles)</td>*@
                    <td>

                      @using (Html.BeginForm("DeleteProfileAdmin", "Account", new { userId = item.Id }, FormMethod.Post, new { id = "delete" }))
                      {
                        @Html.AntiForgeryToken()

                        <a href="javascript:document.getElementById('delete').submit()" style="outline:none; all:unset" class="d-b td-n pY-5 bgcH-grey-100 c-grey-700">
                          <span style="color: #2196f3" class="fsz-sm">
                            Delete
                          </span>
                        </a>
                      }
                      @*@Html.ActionLink("EditPerson", "Edit", new { id = item.ItemId }) |
                        @Html.ActionLink("DetailsPerson", "DetailsPerson", new { id = item.ItemId }) |*@
                      @*@Html.ActionLink("Delete", "DeleteOrganisation", "Item", new { id = item.ItemId })*@
                    </td>

                  </tr>
                }
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jq-3.2.1/dt-1.10.16/af-2.2.2/b-1.5.1/b-flash-1.5.1/b-html5-1.5.1/kt-2.3.2/r-2.2.1/datatables.min.css" />

<script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jq-3.2.1/dt-1.10.16/af-2.2.2/b-1.5.1/b-flash-1.5.1/b-html5-1.5.1/kt-2.3.2/r-2.2.1/datatables.min.js"></script>
<script defer>
  $("document").ready(function () {
    $('#tab').DataTable();
  });
</script>