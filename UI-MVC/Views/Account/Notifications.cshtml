@{
    ViewBag.Title = "Notifications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content bgc-grey-100">
    <div id="mainContent" class="container-fluid">
        <div class="bgc-white p-10 bd mB-10">
            <h3>Notifications</h3>
        </div>
        @foreach (var a in Model)
        {
            <div class="form-row">
                <div class="bgc-white form-group bd col-md-12">
                    <a href="@Url.Action("ClickNotification", "Account", new { id = a.AlertId })">
                        <div class="form-row">
                            <div class="col-md-2"><img class="w-3r bdrs-50p alert-img" src="~/Content/Images/Profile-pic.png" alt=""></div>
                            <div class="col-md-10 alert-text">
                                <span class="fsz-xl">@a.Alert.Text</span>
                                <p class="m-0">@a.TimeStamp.</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</main>