@{
    ViewBag.Title = "Notifications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content bgc-grey-100">
    <div id="mainContent" class="container-fluid">
        <div class="bgc-white p-10 bd mB-10">
            <h3>Notifications</h3>
        </div>
        @if (Model.Count == 0)
        {
            <div class="row">
                <div class="bgc-white form-group bd col-md-12 pY-20">
                    <a href="@Url.Action("Faq", "Home")">
                        <div class="row">
                            <div class="col-md-2"><img class="w-3r bdrs-50p alert-img" src="~/Content/Images/question-mark.png" alt=""></div>
                            <div class="col-md-10 alert-text">
                                <span class="fsz-xl">U heeft op dit moment nog geen notifications, dit kan zijn omdat u nog niet gesubscribed bent op een item.</span>
                                <p class="m-0">U kunt op deze box klikken om verder te gaan naar de faq-pagina waar u meer info vindt over subscriben!</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
        else
        {
            foreach (var a in Model)
            {
                <div class="row">
                    <div class="bgc-white form-group bd col-md-12">
                        <a href="@Url.Action("ClickNotification", "Account", new { id = a.AlertId })">
                            <div class="row">
                                <div class="col-md-2"><img class="w-3r bdrs-50p alert-img" src="~/Content/Images/Profile-pic.png" alt=""></div>
                                <div class="col-md-10 alert-text">
                                    <span class="fsz-xl">@a.Alert.Text</span>
                                    <p class="m-0">@a.TimeStamp.</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        }
    </div>
</main>