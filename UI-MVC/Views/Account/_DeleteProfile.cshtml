@model UI_MVC.Models.DeleteProfileModel


<div class="bgc-white p-10 bd mB-10">
    <h4 class="bb-2">Delete Profile<span class="arrow-account" style="transform: rotate(180deg);"><i class="ti-angle-up"></i></span></h4>
    @using (Html.BeginForm("DeleteProfile", "Account", FormMethod.Post, new { style = "display:none;" }))
    {
        @Html.AntiForgeryToken()
        <form>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-row">
                <button type="button" class="btn btn-delete">Delete Profile</button>
            </div>
            <div id="myModal" class="modal">
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <p>
                        Bent u zeker dat u uw profiel wilt verwijderen?
                    </p>
                    <div class="form-group col-md-6">
                        <button type="submit" class="btn btn-delete">Ja, Ik ben zeker</button>
                        <button type="button" class="btn btn-primary btn-cancel">Nee, Ik heb mij bedacht</button>
                    </div>
                </div>
            </div>
        </form>
    }
</div>

