@model UI_MVC.Models.UserSettingViewModel

<div class="masonry-item col-md-6" style="margin: 10px 0; padding:0;">
  <div class="bgc-white p-20 bd" style="height: 400px;">
    <h3 class="h3">Notification settings</h3>
    <br />
    @using (Html.BeginForm("_UserSettingDetails", "Account", FormMethod.Post))
    {

      @Html.AntiForgeryToken()

    <form>
      <div class="form-group row">
        <div class="col-sm-3">
          <label>Notification on/off</label>
        </div>
        <div class="col-sm-7" style="text-align:center">
          <label class="switch">
            @Html.CheckBoxFor(model => model.WANTS_SITE_NOTIFICATIONS)
            <div class="slider round"></div>
          </label>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-3">
          <label>Mail Notification on/off</label>
        </div>
        <div class="col-sm-7" style="text-align:center">
          <label class="switch">

            @Html.CheckBoxFor(model => model.WANTS_EMAIL_NOTIFICATIONS)
            <div class="slider round"></div>

          </label>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-3">
          <label>Android Notification on/off</label>
        </div>
        <div class="col-sm-7" style="text-align:center">
          <label class="switch">
            @Html.CheckBoxFor(model => model.WANTS_ANDROID_NOTIFICATIONS)
            <div class="slider round"></div>
          </label>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-3">
          <label>Weekly review mail notifications on/off</label>
        </div>
        <div class="col-sm-7" style="text-align:center">
          <label class="switch">
            @Html.CheckBoxFor(model => model.WANTS_WEEKLY_REVIEW_VIA_MAIL)
            <div class="slider round"></div>
          </label>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-12">
          <input id="submit" type="submit" value="Save" class="btn btn-default" />
        </div>
      </div>
    </form>


    }

  </div>
</div>
