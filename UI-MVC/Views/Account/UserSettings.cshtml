@model IEnumerable<PB.BL.Domain.Items.Item>
@{
  ViewBag.Title = "Settings";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content bgc-grey-100">
  <div id="mainContent">
    <div class="container-fluid">
      <div style="margin: 10px 0;padding:0;" class="masonry-item col-md-12">
        <div class="bgc-white p-20 bd">
          <h1 class="h3" style="text-align: center">Beheer settings en subscriptions</h1>
        </div>
      </div>

      <div class="row">
        <div style="margin: 10px 0; padding:0;" class="masonry-item col-md-6">
          <div class="bgc-white p-20 bd">
            <h3 class="h3">Notification settings</h3>
            <br />
            <div class="form-group row">
              <div class="col-sm-3">
                <label>Notification on/off</label>
              </div>
              <div class="col-sm-7">
                <input name="changename" class="form-control" type="checkbox" />
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-3">
                <label>Mail Notification on/off</label>
              </div>
              <div class="col-sm-7">
                <input name="changename" class="form-control" type="checkbox" />
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-3">
                <label>Notification refresh time</label>
              </div>
              <div class="col-sm-7">
                <select style="margin-bottom: 5%" id="inputState" class="form-control" name="type">
                  <option value="" disabled selected>Select refresh time</option>
                  <option>Every hour</option>
                  <option>Every day</option>
                </select>
              </div>


            </div>
          </div>
        </div>



        <div style="margin: 10px 0; padding:0;" class="masonry-item col-md-6">
          <div class="bgc-white p-20 bd">
            <h4 class="c-grey-900 mB-20">Subscriptions</h4>
            <table id="tab" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
              <thead>
                <tr>

                  <th>@Html.DisplayNameFor(model => model.Name)</th>
                  @*<th>@Html.DisplayNameFor(model => model)</th>*@
                  <th>CRUD</th>
                </tr>
              </thead>

              <tbody>
                @foreach (var item in Model)
                {
                  <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>

                    @*<td>@Html.DisplayFor(modelItem => item.Roles)</td>*@
                    <td>

                      @using (Html.BeginForm("RemoveSubscription", "Home", new { Id = item.ItemId }, FormMethod.Post, new { id = "delete" }))
                      {
                        @Html.AntiForgeryToken()

                        <a href="javascript:document.getElementById('delete').submit()" style="outline:none; all:unset" class="d-b td-n pY-5 bgcH-grey-100 c-grey-700">
                          <span style="color: #2196f3" class="fsz-sm">
                            Delete subscription
                          </span>
                        </a>
                      }

                    </td>

                  </tr>
                }
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>


<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jq-3.2.1/dt-1.10.16/af-2.2.2/b-1.5.1/b-flash-1.5.1/b-html5-1.5.1/kt-2.3.2/r-2.2.1/datatables.min.css" />

<script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jq-3.2.1/dt-1.10.16/af-2.2.2/b-1.5.1/b-flash-1.5.1/b-html5-1.5.1/kt-2.3.2/r-2.2.1/datatables.min.js"></script>

<script defer>
  $("document").ready(function () {
    $('#tab').DataTable();
  });
</script>