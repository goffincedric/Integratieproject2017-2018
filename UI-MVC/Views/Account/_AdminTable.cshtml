@model IEnumerable<PB.BL.Domain.Accounts.Profile>

<div class="row">
  <div style="margin: 10px 0; padding: 0;" class="masonry-item col-md-12">
    <div class="bgc-white p-20 bd">
      <h4 class="c-grey-900 mB-20">Admins</h4>
      <table id="tab" class="table table-striped table-bordered" cellspacing="0" style="width: 100%">
        <thead>
        <tr>
          <th>@Html.DisplayNameFor(model => model.Id)</th>
          <th>@Html.DisplayNameFor(model => model.UserName)</th>
          <th>@Html.DisplayNameFor(model => model.Email)</th>
          <th>Tools</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
          <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>
              <div class="row">
                @using (Html.BeginForm("RemoveFromAdmin", "Account", new {id = item.Id}, FormMethod.Post, new {id = "delete-" + item.Id}))
                {
                  @Html.AntiForgeryToken()
                  <button class="btn btn-sm" style="margin-right: 5px">
                    <a href="javascript:document.getElementById('delete-@item.Id').submit()" style="outline: none; all: unset" class="d-b td-n pY-5 bgcH-grey-100 c-grey-700">
                      <span style="color: #2196f3" class="fsz-sm">
                        Remove From Admin
                      </span>
                    </a>
                  </button>
                }

                @using (Html.BeginForm("MakeSuperAdmin", "Account", new {id = item.Id}, FormMethod.Post, new {id = "delete-" + item.Id}))
                {
                  @Html.AntiForgeryToken()
                  <button class="btn btn-sm" style="margin-right: 5px">
                    <a href="javascript:document.getElementById('delete-@item.Id').submit()" style="outline: none; all: unset" class="d-b td-n pY-5 bgcH-grey-100 c-grey-700">
                      <span style="color: #2196f3" class="fsz-sm">
                        Make SuperAdmin
                      </span>
                    </a>
                  </button>
                }

              </div>
            </td>
          </tr>
        }
        </tbody>
      </table>
    </div>
  </div>
</div>
<script>
  $("document").ready(function() {
    $('#tab').DataTable();
  });
</script>