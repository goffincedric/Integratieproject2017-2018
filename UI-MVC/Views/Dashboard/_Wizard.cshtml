<div class="row">
    <div class="col-sm-6 col-sm-offset-2" style="margin:auto">
        <!--      Wizard container        -->
        <div class="wizard-container">
            <div class="card wizard-card" data-color="blue" id="wizard">
                <form>
                    <!--        You can switch " data-color="rose" "  with one of the next bright colors: "blue", "green", "orange", "purple"        -->
                    <div class="wizard-header">
                        <h3 class="wizard-title">
                            Creëer jouw grafiek
                        </h3>
                    </div>
                    <div class="wizard-navigation">
                        <ul style="line-height:35px">
                            <li><a href="#location" data-toggle="tab">Type</a></li>
                            <li><a href="#type" data-toggle="tab">Items</a></li>
                            <li><a href="#facilities" data-toggle="tab">Styling</a></li>
                            <li><a href="#description" data-toggle="tab">Positie en Grootte </a></li>
                        </ul>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane" id="location">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h4 class="info-text">Kies eerst je grafiek type en de hoeveelheid data om te vergelijken</h4>
                                </div>
                                <div class="col-sm-6 col-sm-offset-1">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Aantal te vergelijken items</label>
                                        <input type="number" class="form-control" id="exampleInputEmail1">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Output</label>
                                        <select name="country" class="form-control">
                                            <option disabled="" selected=""></option>
                                            <option value="Afghanistan"> Tweet evolution</option>
                                            <option value="Albania"> Positiviteit</option>
                                            <option value="Algeria"> Trending Mentions </option>
                                            <option value="American Samoa"> Trending Hashtags</option>
                                            <option value="Andorra"> Trending Urls</option>
                                            <option value="Angola"> Retweet </option>
                                            <option value="Anguilla"> Sentiment analyse</option>
                                            <option value="...">...</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-sm-offset-1">
                                    <input type="hidden" name="count" value="1" />
                                    <div class="control-group" id="fields">
                                        <div class="controls" id="profs">
                                            <div class="input-append">
                                                <div id="field" class="row"><input autocomplete="off" class="input form-control" id="field1" name="prof1" type="text" placeholder="Type something" data-items="8" /><button id="b1" class="btn add-more" type="button">+</button></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @*<div class="col-sm-6 col-sm-offset-1">
                                      <div class="form-group label-floating">
                                        <label class="control-label">Item naam</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1">
                                      </div>
                                    </div>*@
                                <div class="col-sm-6">
                                    <input type="hidden" name="count" value="1" />
                                    <div class="control-group" id="fields">
                                        <div class="controls" id="profs">
                                            <div class="input-append">
                                                <div id="field" class="row"><input autocomplete="off" class="input form-control" id="field1" name="prof1" type="text" placeholder="Type something" data-items="8" /><button id="b1" class="btn add-more" type="button">+</button></div>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                        <div class="tab-pane" id="type">
                            <h4 class="info-text">Kies je type? </h4>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="choice" data-toggle="wizard-radio" rel="tooltip" title="Select this option if you want a bar chart.">
                                                <input checked="checked" id="bar" type="radio" name="type" value="Bar Chart">
                                                <div class="icon">
                                                    <i class="material-icons">insert_chart</i>
                                                </div>
                                                <h6>Bar Chart</h6>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="choice" data-toggle="wizard-radio" rel="tooltip" title="Select this option if you want a pie chart">
                                                <input id="pie" type="radio" name="type" value="PieChart">
                                                <div class="icon">
                                                    <i class="material-icons">pie_chart</i>
                                                </div>
                                                <h6>Piechart</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="facilities">
                            <h4 class="info-text">Style je element </h4>
                            <div class="row">
                                <div class="col-sm-6 col-sm-offset-1">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Select color set</label>
                                        <select class="form-control">
                                            <option disabled="" selected=""></option>
                                            <option>ColorSet 1</option>
                                            <option>ColorSet 2 </option>
                                            <option>ColorSet 3</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Behoud aspect ration?</label>
                                        <select class="form-control">
                                            <option disabled="" selected=""></option>
                                            <option>Yes</option>
                                            <option>No </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-sm-offset-1">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Toevoegen in zone?</label>
                                        <select class="form-control">
                                            <option disabled="" selected=""></option>
                                            <option>Zone A</option>
                                            <option>Zone B </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Positie van de labels</label>
                                        <select class="form-control">
                                            <option disabled="" selected=""></option>
                                            <option>Links</option>
                                            <option>Rechts</option>
                                            <option>
                                                Boven
                                            </option>
                                            <option>Onder</option>>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="description">
                            <h4 class="info-text">Bepaal positie en groote </h4>
                            <div class="row">
                                <div class="col-sm-6 col-sm-offset-1">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Voeg grafiek toe?</label>
                                        <select class="form-control">
                                            <option disabled="" selected=""></option>
                                            <option>Eerst vrije plaats</option>
                                            <option>Random </option>
                                            <option>Na laatste element</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Grootte</label>
                                        <select class="form-control">
                                            <option disabled="" selected=""></option>
                                            <option>Small</option>
                                            <option>Medium</option>
                                            <option>Large</option>
                                            <option>Full Width</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="wizard-footer">
                        <div class="pull-right">
                            <input type='button' class='btn btn-cancel btn-fill btn-primary btn-wd' name='cancel' value='Cancel' style="background-color: crimson">
                            <input type='button' class='btn btn-next btn-fill btn-primary btn-wd' name='next' value='Next' style="background-color: #00bcd4">
                            <input type='button' class='btn btn-finish btn-fill btn-primary btn-wd' name='finish' value='Finish' style="background-color: #00bcd4" />
                        </div>
                        <div class="pull-left">
                            <input type='button' class='btn btn-previous btn-fill btn-default btn-wd' name='previous' value='Previous' style="background-color: #00bcd4" />
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </form>
            </div>
        </div> <!-- wizard container -->
    </div>
</div> <!-- row -->
