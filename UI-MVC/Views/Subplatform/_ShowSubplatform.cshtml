@model IEnumerable<PB.BL.Domain.Platform.Subplatform>

@{
    ViewBag.Title = "Show Subplatforms";

}

<div class="row">
    <div style="margin: 10px 0; padding: 0;" class="masonry-item col-md-12">
        <div class="bgc-white p-20 bd">
            <h4 class="c-grey-900 mB-20">Subplatform Table</h4>
            <table id="tab" class="table table-striped table-bordered" cellspacing="0" style="width: 100%">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.SubplatformId)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.URL)</th>
                        <th>@Html.DisplayNameFor(model => model.Admins)</th>
                        <th>Tools</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.SubplatformId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.URL)</td>
                            <td>
                                @if (item.Admins.Count > 0)
                                {
                                    @Html.Raw(item.Admins.Select(a => a.ToString()).Aggregate((lijst, a) => lijst + "<br />" + a))
                                }
                            </td>

                            <td>
                                <div class="row">
                                    <button class="btn btn-sm">
                                        @Html.ActionLink("Edit", "EditSubplatform", new { id = item.SubplatformId })
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<link href="~/Content/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/datatables.min.js"></script>
<script>
    $("document").ready(function () {
        $('#tab').DataTable({ "pageLength": 3 });
    });
</script>


