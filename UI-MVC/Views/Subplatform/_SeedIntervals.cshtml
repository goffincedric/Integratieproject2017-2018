@model UI_MVC.Models.SeedIntervals

@using (Html.BeginForm("SeedIntervals", "Subplatform", FormMethod.Post))
{
  <div class="form-group row">
    <div class="col-sm-5">
      <label>Seed interval (in # uren)</label>
    </div>
    <div class="col-sm-5">
      <div class="row">
        @Html.EditorFor(model => model.SEED_INTERVAL_HOURS, new {htmlAttributes = new {@class = "form-control", @type = "number"}})
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-5">
      <label>Alert generation interval (in # uren)</label>
    </div>
    <div class="col-sm-5">
      <div class="row">
        @Html.EditorFor(model => model.ALERT_GENERATION_INTERVAL_HOURS, new {htmlAttributes = new {@class = "form-control", @type = "number"}})
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-5">
      <label>Weekly review interval (in # dagen; Begint eerste keer op zondag)</label>
    </div>
    <div class="col-sm-5">
      <div class="row">
        @Html.EditorFor(model => model.SEND_WEEKLY_REVIEWS_INTERVAL_DAYS, new {htmlAttributes = new {@class = "form-control", @type = "number"}})
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-12">
      <div class="row">
        <button type="submit" class="btn btn-lg btn-primary">Save intervals</button>
      </div>
    </div>
  </div>
}