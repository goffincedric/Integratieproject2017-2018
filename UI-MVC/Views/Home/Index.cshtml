    <div class="outer">
      <div class="middle">
        <div class="inner">
          <div class="col-xl-10 mx-auto">
            <h1 class="mb-5 banner-text">@ViewBag.HeaderText</h1>
            <h4 class="mb-4 banner-text">
              @ViewBag.BannerSub1
            </h4>
            <h4 class="mb-3 banner-text">
              @ViewBag.BannerSub2
            </h4>
            <br />
