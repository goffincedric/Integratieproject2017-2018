      var myNewDataSet = {
        label: value,
        data: values,
        borderWidth: 2,
        backgroundColor: backgroundcolors[counter],
        borderColor: borderColors[counter],
        pointBackgroundColor: points[counter]

      }

      datagrafiek.datasets.push(myNewDataSet);

      myLineChart.update();
      counter++;
    });


  }


  $(document).ready(function () {
    drawLineChart();
  });

