            <div class="middle">
              <div class="inner">
                <h4 class="mb-5 call-to-action-text">
                  @ViewBag.CallToAction
                </h4>
                <a href="@Url.Action("Login", "Account")" class="btn btn-primary text-uppercase call-to-action-button">Start nu</a>
              </div>
            </div>
          </div>
        </div>
      }
