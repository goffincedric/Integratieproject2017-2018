
@{
  ViewBag.Title = "PlatformSettings";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content bgc-grey-100">
  <div id="mainContent">
    <div class="container-fluid">

      <div style="margin: 10px 0;padding:0;" class="masonry-item col-md-12">
        <div class="bgc-white p-20 bd">
          <h3 class="h3">Platform stats</h3>

          <span style="color: #2196f3" class="fsz-sm">
            Totaal aantal users: @Html.Label("Totaal aantal users:", (string)ViewBag.TotalUsers)
          </span>
          <br />

          <span style="color: #2196f3" class="fsz-sm">
            Totaal aantal items: @Html.Label("Totaal aantal items", (string)ViewBag.TotalItems)
          </span>
          <br />
          <span style="color: #2196f3" class="fsz-sm">
            Totaal aantal persons: @Html.Label("Totaal aantal users:", (string)ViewBag.TotalPersons)
          </span>
          <br />
          <span style="color: #2196f3" class="fsz-sm">
            Totaal aantal organisations: @Html.Label("Totaal aantal organisations", (string)ViewBag.TotalOrganisations)
          </span>
          <br />
          <span style="color: #2196f3" class="fsz-sm">
            Totaal aantal themes: @Html.Label("Totaal aantal users:", (string)ViewBag.TotalThemes)
          </span>
          <br />
          <span style="color: #2196f3" class="fsz-sm">
            Totaal aantal keywords: @Html.Label("Totaal aantal keywords", (string)ViewBag.TotalKeywords)
          </span>

        </div>
      </div>

      <br />
      <hr />

      <div class="row">
        <div style="margin: 10px 0;padding:0;" class="masonry-item col-md-6">
          <div class="bgc-white p-20 bd" style="min-height:450px;">
            <div class="form-group row">
              <div class="col-sm-3">
                <label>Subplatform</label>
              </div>
              <div class="col-sm-7">
                <select style="margin-bottom: 5%" id="inputState" class="form-control" name="type">
                  <option value="" disabled selected>Select subplatform</option>
                  <option>Politieke barometer</option>
                  <option>Testing testing</option>
                </select>
              </div>


            </div>

            <div class="form-group row">
              <div class="col-sm-3">
                <label>Default Theme</label>
              </div>
              <div class="col-sm-7">
                <select style="margin-bottom: 5%" id="inputState" class="form-control" name="type">
                  <option value="" disabled selected>Select default</option>
                  <option>Light mode</option>
                  <option>Dark mode</option>
                  <option>Future mode</option>
                </select>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-3">
                <label>Change site logo</label>
              </div>
              <div class="col-sm-7">


                @using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                  <div class="">
                    @Html.TextBox("file", "", new { type = "file" }) <br />

                    <input type="submit" value="Upload" />

                  </div>
                }

              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-3">
                <label>Change site name</label>
              </div>
              <div class="col-sm-7">
                <div class="row">
                  <input name="changename" class="form-control  w-50" type="text" />
                  <button type="submit" value="Save" class="btn btn-primary btn-sm mL-10">Save</button>
                </div>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-3">
                <label>Aantal dagen bijhouden data</label>
              </div>
              <div class="col-sm-7">
                <div class="row">
                  <input class="form-control  w-50" type="number" />
                  <button type="submit" value="Save" class="btn btn-primary btn-sm mL-10">Save</button>
                </div>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-3">
                <label># Database sync/dag </label>
              </div>
              <div class="col-sm-7">
                <div class="row">
                  <input class="form-control  w-50" type="number" />
                  <button type="submit" value="Save" class="btn btn-primary btn-sm mL-10">Save</button>
                </div>
              </div>
            </div>

          </div>
        </div>

        <div style="margin: 10px 0;padding:0;" class="masonry-item col-md-6">
          <div class="bgc-white p-20 bd" style="min-height:450px;">
            <h6 class="h6">Sync tools</h6>
            @using (Html.BeginForm("Syncronize", "Home", FormMethod.Post))
            {
              <button type="submit" style="margin: 25px 0 ;" class="btn btn-primary btn-lg">Syncroniseer API</button>
            }

            @using (Html.BeginForm("GenerateAlertsManually", "Home", FormMethod.Post))
            {
              <button type="submit" style="margin: 25px 0 " ; class="btn btn-primary btn-lg">Generate alerts manually</button>
            }

            @using (Html.BeginForm("CleanupDB", "Home", FormMethod.Post))
            {
              <button type="submit" style="margin: 25px 0;" class="btn btn-primary btn-lg">Cleanup DB</button>

            }

          </div>
        </div>
      </div>
    </div>
  </div>
</main>
