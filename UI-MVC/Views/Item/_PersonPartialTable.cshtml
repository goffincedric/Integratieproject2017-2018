@model IEnumerable<PB.BL.Domain.Items.Person>

<div class="row">
  <div class="col-md-12">
    <div class="bgc-white bd bdrs-3 p-20 mB-20">
      <h4 class="c-grey-900 mB-20">Person Table</h4>
      <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
        <thead>
          <tr>
            <th>@Html.DisplayNameFor(model => model.ItemId)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.IconURL)</th>
            <th>@Html.DisplayNameFor(model => model.SocialMediaLink)</th>
            <th>@Html.DisplayNameFor(model => model.Organisation)</th>
            <th>@Html.DisplayNameFor(model => model.Function)</th>
            <th>CRUD</th>

          </tr>
        </thead>

        <tbody>
          @foreach (var item in Model)
          {
            <tr>
              <td>@Html.DisplayFor(modelItem => item.ItemId)</td>
              <td>@Html.DisplayFor(modelItem => item.Name)</td>
              <td>@Html.DisplayFor(modelItem => item.IconURL)</td>
              <td>@Html.DisplayFor(modelItem => item.SocialMediaLink)</td>
              <td>@Html.DisplayFor(modelItem => item.Organisation)</td>
              <td>@Html.DisplayFor(modelItem => item.Function)</td>
              <td>

                @using (Html.BeginForm("DeleteItem", "Item", new { id = item.ItemId }, FormMethod.Post, new { id = "delete" }))
                {
                  @Html.AntiForgeryToken()

                  <a href="javascript:document.getElementById('delete').submit()" style="outline:none; all:unset" class="d-b td-n pY-5 bgcH-grey-100 c-grey-700">
                    <span style="color: #2196f3" class="fsz-sm">
                      Delete
                    </span>
                  </a>
                }

              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  </div>
</div>