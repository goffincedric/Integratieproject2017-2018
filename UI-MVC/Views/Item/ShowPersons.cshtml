@model IEnumerable<PB.BL.Domain.Items.Person>
@{
  ViewBag.Title = "ShowPersons";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="main-content bgc-grey-100">
  <div id="mainContent">
    <div class="container-fluid">
      <div style="margin: 10px 0; padding: 0;" class="masonry-item col-md-12">
        <div class="bgc-white p-20 bd">
          <h1 class="h3" style="text-align: center">Politici</h1>
        </div>
      </div>

      <div class="row">
        <div style="margin: 10px 0; padding: 0;" class="masonry-item col-md-12">
          <div class="bgc-white p-20 bd">

            <table id="tab" class="table table-striped table-bordered" cellspacing="0" style="width: 100%">
              <thead>
                <tr>

                  <th>Profielfoto</th>
                  <th>@Html.DisplayNameFor(model => model.Name)</th>
                  <th>@Html.DisplayNameFor(model => model.Organisation)</th>
                  <th>@Html.DisplayNameFor(model => model.Gemeente)</th>
                  <th>Vermeldingen</th>
                  <th># gebruikers gesubscribed</th>
                  <th>Subscribe</th>
                </tr>
              </thead>
              <tbody>
                @foreach (var item in Model)
                {
                  <tr>
                    <td><img style="width: 50px; height:50px; border-radius:50%; margin-left:50px;" src="@Url.Content(@item.IconURL)" alt=""></td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Organisation.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Gemeente)</td>
                    <td>@Html.DisplayFor(modelItem => item.Records.Count)</td>
                    <td>@Html.DisplayFor(modelItem => item.SubscribedProfiles.Count) </td>
                    <td>
                      @using (Html.BeginForm("AddSubscription", "Home", new { Id = item.ItemId }, FormMethod.Post))
                      {
                        @Html.AntiForgeryToken()
                        <button type="submit" value="Subscribe" class="btn btn-outline-primary btn-lg btn-block">Subcribe</button>
                      }
                    </td>

                  </tr>
                }
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<link href="~/Content/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/datatables.min.js"></script>
<script>
  $("document").ready(function () {
    $('#tab').DataTable();
  });
</script>

