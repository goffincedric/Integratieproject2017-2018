@model IEnumerable<PB.BL.Domain.Items.Person>
@{
  ViewBag.Title = "ItemTables";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content bgc-grey-100">
  <div id="mainContent">
    <div class="container-fluid">
      <h4 class="c-grey-900 mT-10 mB-30">Items</h4>
      <div class="row">
        <div class="col-md-12">
          <div class="bgc-white bd bdrs-3 p-20 mB-20">
            <h4 class="c-grey-900 mB-20">Item Table</h4>
            <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
              <thead>
                <tr>
                  <th>@Html.DisplayNameFor(model => model.ItemId)</th>
                  <th>@Html.DisplayNameFor(model => model.IsHot)</th>
                  <th>@Html.DisplayNameFor(model => model.Name)</th>
                  <th>@Html.DisplayNameFor(model => model.IconURL)</th>

                  @*<th>Start date</th>
                  <th>Salary</th>*@
                </tr>
              </thead>

              <tbody>
                @foreach (var item in Model)
              {
                <tr>
                  <td>@Html.DisplayFor(modelItem => item.ItemId)</td>
                  <td>@Html.DisplayFor(modelItem => item.IsHot)</td>
                  <td>@Html.DisplayFor(modelItem => item.Name)</td>
                  <td>@Html.DisplayFor(modelItem => item.IconURL)</td>
                  @*<td>
      @Html.ActionLink("EditPerson", "Edit", new { id = item.ItemId }) |
      @Html.ActionLink("DetailsPerson", "DetailsPerson", new { id = item.ItemId }) |
      @Html.ActionLink("DeletePerson", "DeletPerson", new { id = item.ItemId })
    </td>*@
                </tr>
            }
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>